                        android:onClick="operationAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space13"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space14"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonMinus"
                        android:layout_width="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                        android:id="@+id/space15"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="0dp"/>
                <Button
                        style="@style/buttonNumber"
                        android:id="@+id/button1"
                        android:text="1"
                        android:onClick="numberAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space15"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space16"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/button1"
                        android:layout_width="0dp"/>
                <Button
                        style="@style/buttonNumber"
                        android:id="@+id/button2"
                        android:text="2"
                        android:onClick="numberAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space16"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space17"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/button2"
                        android:layout_width="0dp"/>

                <Button
                        style="@style/buttonNumber"
                        android:id="@+id/button3"
                        android:text="3"
                        android:onClick="numberAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space17"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space18"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/button3"
                        android:layout_width="0dp"/>
                <Button
                        style="@style/buttonOperator"
                        android:id="@+id/buttonPlus"
                        android:text="+"
                        android:onClick="operationAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space18"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space19"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonPlus"
                        android:layout_width="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                        android:id="@+id/space20"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="0dp"/>
                <Button
                        style="@style/buttonNumber"
                        android:id="@+id/button0"
                        android:text="0"
                        android:onClick="numberAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space20"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space99"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/button0"
                        android:layout_width="0dp"/>
                <Button
                        style="@style/buttonOperator"
                        android:id="@+id/percent"
                        android:text="%"
                        android:onClick="operationAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space99"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space21"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/percent"
                        android:layout_width="0dp"/>
                <Button
                        style="@style/buttonSpecialOperator"
                        android:id="@+id/buttonPoint"
                        android:text="."
                        android:onClick="addPointAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space21"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space22"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonPoint"
                        android:layout_width="0dp"/>
                <Button
                        style="@style/buttonOperator"
                        android:id="@+id/buttonSum"
                        android:text="="
                        android:onClick="equalsAction"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/space22"
                        app:layout_constraintWidth_percent="0.2"/>
                <Space
                        android:id="@+id/space23"
                        app:layout_constraintWidth_percent="0.04"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonSum"
                        android:layout_width="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
