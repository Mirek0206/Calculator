<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="shapeAppearance">@style/CircleShape</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="shapeAppearance">@style/CircleShape</item>

    </style>

    <style name="buttonSpecialOperator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="shapeAppearance">@style/CircleShape</item>
    </style>

    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="startButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="shapeAppearance">@style/CircleShape</item>
        <item name="android:insetTop">10dp</item>
        <item name="android:insetBottom">10dp</item>
    </style>
</resources>